<% layout('/layout/boilerplate.ejs') %>

<div class="row">
  <div class="col-6 offset-3">
    <div class="alert alert-danger" role="alert">
      <h4 class="alert-heading">ERROR!</h4>
      <p><%= err.message %></p>
      <hr />
      <%if(process.env.NODE_ENV !== 'production') { %>
      <p class="mb-0"><%=err.stack %></p>
      <% } %>
    </div>
  </div>
</div>
